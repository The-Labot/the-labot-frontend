{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "moduleResolution": "node",

    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "strict": false,
    "isolatedModules": true,
    "skipLibCheck": true,

    "types": ["react", "react-native"],

    // üî• Ïù¥ Îëê Ï§Ñ Ï∂îÍ∞Ä
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "App.tsx",
    "App.ts",
    "App.js",
    "index.js",
    "index.ts",
    "index.tsx",
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ]
}